	lattice = run0.new,
	use_beamline = RINGRF,
	p_central_mev = 7e3,
	default_order = 1,
        final = %s.finOpt3
        parameters = %s.param3
        semaphore_file = %s.done,
        rootname = <rootname>
&end

&moments_output
        filename = "%s.mom",
        matched = 1,
        equilibrium = 1,
        radiation = 1,
        output_at_each_step = 1
&end
&load_parameters
        filename = %s.param2,
        change_defined_values = 1
&end

&run_control &end

&optimization_setup
        n_evaluations = 1500
        n_passes = 3
        n_restarts = 0
        verbose = 0
        log_file = /dev/tty
        tolerance = 1e-12
        target = 1e-6
&end

&optimization_term
        term = "S35BM#1.s33m S35BM#1.s44m * S35BM#1.s34m sqr - sqrt 1e12 * <eyTarget> 1 sene" &end

&optimization_variable
        name = S3A:QS, item = K1, lower_limit=-0.12, upper_limit=0.12, step_size=0.001 &end

&optimization_covariable
        name = S7A:QS, item = K1, equation = "S7A:QS.K10 S3A:QS.K1 S3A:QS.K10 - +"
&end
&optimization_covariable
        name = S11A:QS, item = K1,  equation = "S11A:QS.K10 S3A:QS.K1 S3A:QS.K10 - +"
&end
&optimization_covariable
