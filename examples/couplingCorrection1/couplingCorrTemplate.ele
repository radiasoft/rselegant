        name = S39A:QS, item = K1, 
        equation = "{sddsprocess skewA-cos.sdds -pipe=out -match=col,ElementName=S39A:QS | sdds2stream -pipe -column=coefficient} S3A:QS.K1 S3A:QS.K10 - * S39A:QS.K10 +"
&end

&bunched_beam &end

&optimize &end

